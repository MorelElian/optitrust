// Place your key bindings in this file to override the defaults
[
  {
    // View the state at the end of the current line
    "key": "f5",
    "command": "workbench.action.tasks.runTask",
    "args": "View state",
  },
  {
    // View the diff associated with the application of the last transformation
    "key": "f6",
    "command": "workbench.action.tasks.runTask",
    "args": "View diff",
  }, // make optitrust && view view_diff
  {
    // Compile and run the current file in null
    "key":"f9",
    "command": "workbench.action.tasks.runTask",
    "args": "Compile and run current",
  },
  {
    "key":"f10",
    "command": "workbench.action.tasks.runTask",
    "args": "Compile the full current folder",
  },

  {
    // First recompile optitrust then view the state at the end of the current line
    "key": "shift+f5",
    "command": "workbench.action.tasks.runTask",
    "args": "Recompile and view state",
  },

  {
    // First recompile optitrust then view the diff associated with the application of the last transformation
    "key":"shift+f6",
    "command": "workbench.action.tasks.runTask",
    "args": "Recompile and view diff",
  },
  {
    // First recompile then compile and run the current file in null
    "key":"shift+f9",
    "command": "workbench.action.tasks.runTask",
    "args": "Recompile then compile and run current",
  },

  {
    "key":"shift+f10",
    "command": "workbench.action.tasks.runTask",
    "args": "First recompile optitrust then compile the full current folder",
  },
  // SRC SPECIFIC BINDINGS
   {
    "key": "f5",
    "command": "workbench.action.tasks.runTask",
    "args": "Compile and install the library and compile all unit tests",
    "when": "resourceDirname =~ /^.*\/verified_transfo\/src\/src$/"
  },

  {
    "key":"f6",
    "command": "workbench.action.tasks.runTask",
    "args": "Compile and install the library then execute one unit test",
    "when": "resourceDirname =~ /^.*\/verified_transfo\/src\/src$/"
  },

  {
    "key":"f9",
    "command": "workbench.action.tasks.runTask",
    "args": "Compile the library without installation and tests",
    "when": "resourceDirname =~ /^.*\/verified_transfo\/src\/src$/"
  },

  {
    // Compile and install library, compile all unit tests, and build the documentation
    "key":"f10",
    "command": "workbench.action.tasks.runTask",
    "args": "Compile and build everything",
    "when": "resourceDirname =~ /^.*\/verified_transfo\/src\/src$/"
  },
  
  { /// DEPRECATED
    "key": "ctrl+f6",
    "command": "workbench.action.tasks.runTask",
    "args": "Execute transformation script (dump trace)"
  },
  {
    "key": "ctrl+tab ctrl+up",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "ctrl+tab ctrl+down",
    "command": "workbench.action.navigateDown"
  },
  {
    "key": "ctrl+tab ctrl+left",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "ctrl+tab ctrl+right",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "ctrl-",
    "command": "-workbench.action.zoomOut"
  }
]