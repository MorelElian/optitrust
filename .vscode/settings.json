{
  "optitrust.enableKeybindings": true,
  "search.exclude": {
    "**/_build": true,
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
	"editor.tabSize": 2,
	"editor.detectIndentation": false,
  "ocaml.server.args": [
    "--fallback-read-dot-merlin",
  ],
  "files.associations": {
    "*.Makefile": "makefile",
  },
  "swapf.patterns": [
    {
      "pattern": "^(?<path>.*?)_(out|exp)\\.cpp$",
      "alternatives": [
        "**/<path>_out.cpp",
        "**/<path>_exp.cpp",
        "**/<path>.cpp",
        "**/<path>.ml",
      ]
    },
    {
      "pattern": "^(?<path>.*?)(\\.ml|\\.cpp)$",
      "alternatives": [
        "**/<path>.ml",
        "**/<path>.cpp",
      ]
    },
  ],
}
