{
  "optitrust.enableKeybindings": true,
  "search.exclude": {
    "**/_build": true,
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
	"editor.tabSize": 2,
	"editor.detectIndentation": false,
  "ocaml.server.args": [
    "--fallback-read-dot-merlin",
  ],
  "files.associations": {
    "*.Makefile": "makefile",
  }
}
