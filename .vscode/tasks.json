{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // The -i option is necessary for launching GUI programs from tasks
    "version": "2.0.0",
    "tasks": [
      // Build using make
      {
        "label": "Build everything",
        "type": "shell",
        "command": "make all",
        "options": {
          "cwd": "${workspaceFolder}"
        }
      },
      {
        "label": "Build everything in the current folder",
        "type": "shell",
        "command": "make all",
        "options": {
          "cwd": "${fileDirname}"
        }
      },

      // View diff or trace
      {
        "label": "View diff",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "${fileDirname}",
          "${fileBasenameNoExtension}",
          "${lineNumber}",
          "view_diff"
        ]
      },
      {
        "label": "View trace",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "${fileDirname}",
          "${fileBasenameNoExtension}",
          "${lineNumber}",
          "view_trace"
        ]
      },
      {
        "label": "View trace with -trace-details-only-for-line",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "${fileDirname}",
          "${fileBasenameNoExtension}",
          "${lineNumber}",
          "view_trace",
          "-trace-details-only-for-line ${lineNumber}"
        ]
      },
      {
        "label": "View big step diff",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "${fileDirname}",
          "${fileBasenameNoExtension}",
          "${lineNumber}",
          "view_diff",
          "-only-big-steps"
        ]
      },
      {
        "label": "View diff for ast encoding",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "${fileDirname}",
          "${fileBasenameNoExtension}",
          "${lineNumber}",
          "view_diff_enc"
        ]
      },
      {
        "label": "View diff from intermediate state",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "${fileDirname}",
          "${fileBasenameNoExtension}",
          "${lineNumber}",
          "view_diff_from_inter"
        ]
      },
      {
        "label": "View big step diff from intermediate state",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "${fileDirname}",
          "${fileBasenameNoExtension}",
          "${lineNumber}",
          "view_diff_from_inter",
          "-only-big-steps"
        ]
      },
      {
        "label": "Save intermediate state",
        "type": "shell",
        "command": "tools/view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        },
        "args": [
          "${fileDirname}",
          "${fileBasenameNoExtension}",
          "${lineNumber}",
          "save_inter"
        ]
      },
      {
        "label": "Redo last view command",
        "type": "shell",
        "command": "tools/_last_view_result.sh",
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "args": ["-i"]
          }
        },
        "presentation": {
          "clear": true
        }
      },

      // Run unit tests
      {
        "label": "Run the current test",
        "type": "shell",
        "command": "./tester",
        "args": [
          "${relativeFile}"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        }
      },
      {
        "label": "Run the current test with -dump-trace",
        "type": "shell",
        "command": "./tester",
        "args": [
          "${relativeFile}",
          "-dump-trace"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        }
      },
      {
        "label": "Run all the tests",
        "type": "shell",
        "command": "./tester",
        "args": [
          "all"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "presentation": {
          "clear": true
        }
      },
      {
        "label": "Rerun the last-tried test(s)",
        "type": "shell",
        "command": "./tester_last.sh",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "presentation": {
          "clear": true
        }
      },
      {
        "label": "Open unit test ML and CPP files",
        "type": "shell",
        "command": "${workspaceFolder}/.vscode/open_test.sh",
        "args": [
          "${fileBasename}"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [],
        "presentation": {
          "reveal": "never"
        }
      },
      {
        "label": "Diff wrong tests output",
        "type": "shell",
        "command": ".vscode/diff_wrong_tests_output.sh",
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [],
        "presentation": {
          "reveal": "never"
        }
      }
    ]
}
