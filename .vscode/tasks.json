{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
          "label": "Execute transformation script",
          "type": "shell",
          "command": "./run_action.sh",
          "options": {
            "cwd": "${workspaceFolder}/.vscode"
          },
          "args": [
              "./add_exit_and_exec.sh",
              "${fileDirname}",
              "${fileBasenameNoExtension}",
              "${lineNumber}",
              ""
          ]
      },
        {
          "label": "Start the inotifywait watch",
          "type": "shell",
          "command": "./.vscode/watch.sh "
        },
        {
          "label": "View changes in browser",
          "type": "shell",
          "command": "./run_action.sh",
          "options": {
            "cwd": "${workspaceFolder}/.vscode"
          },
          "args": [
              "./add_exit_and_exec.sh",
              "${fileDirname}",
              "${fileBasenameNoExtension}",
              "${lineNumber}",
              ""
          ]
      },
        {
          "label": "Start the inotifywait watch",
          "type": "shell",
          "command": "./.vscode/watch.sh "
        },
        {
            "label": "Run make install and execute a unit test",
            "type": "shell",
            "command": "./.vscode/run_make_and_test.sh",
            "args":[
                "${fileDirname}",
                "${fileBasenameNoExtension}",
                "${lineNumber}"
            ]
        },
        {
            "label":"Open cpp and ml files",
            "type" : "shell",
            "command": "./${fileBasenameNoExtension}.ml",
        },
        {
            "label": "Execute transformation script (dump trace)",
            "type": "shell",
            "command": "./.vscode/add_exit_and_exec.sh",
            "args": [
                "${fileDirname}",
                "${fileBasenameNoExtension}",
                "${lineNumber}",
                "-dump-trace"
            ]
        },
        {
            "label": "Run make install",
            "type": "shell",
            "command": "./.vscode/run_make.sh",
            "args": [
                
            ]
        },
        {
            "label": "Run make foo.out",
            "type":"shell",
            "command":"./.vscode/run_make_foo.sh",
            "args": [
                "${fileDirname}",
                "${fileBasenameNoExtension}",   
            ]
        },
        {
            "label": "Run make foo.chk",
            "type":"shell",
            "command":"./.vscode/run_make_foo.sh",
            "args": [
                "${fileDirname}",
                "${fileBasenameNoExtension}",
                "chk"   
            ]
        },
        {
            "label": "Run live server",
            "type": "process",
            "command": "@extension.liveServer.goOnline",
            "args":[
              "${fileDirname}",
              "${fileBasenameNoExtension}"
            ]
        }

    ]
}
