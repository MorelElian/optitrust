{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Execute transformation script",
            "type": "shell",
            "command": "./.vscode/add_exit_and_exec.sh",
            "args": [
                "${fileDirname}",
                "${fileBasenameNoExtension}",
                "${lineNumber}",
                ""
            ]
        },
        {
            "label": "Run make install and execute a unit test",
            "type": "shell",
            "command": "./.vscode/run_make_and_test.sh",
            "args":[
                "${fileDirname}",
                "${fileBasenameNoExtension}",
                "${lineNumber}"
            ]
        },
        {
            "label": "Execute transformation script (dump trace)",
            "type": "shell",
            "command": "./.vscode/add_exit_and_exec.sh",
            "args": [
                "${fileDirname}",
                "${fileBasenameNoExtension}",
                "${lineNumber}",
                "-dump-trace"
            ]
        },
        {
            "label": "Run make install",
            "type": "shell",
            "command": "./.vscode/run_make.sh",
            "args": [
                
            ]
        },
        {
            "label": "Run make foo.out",
            "type":"shell",
            "command":"./.vscode/run_make_foo.sh",
            "args": [
                "${fileDirname}",
                "${fileBasenameNoExtension}",   
            ]
        },
        {
            "label": "Run make foo.chk",
            "type":"shell",
            "command":"./.vscode/run_make_foo.sh",
            "args": [
                "${fileDirname}",
                "${fileBasenameNoExtension}",
                "chk"   
            ]
        }

    ]
}
